<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:backgroundTint="#9BE6EF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMaLich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã lịch học: Buoi1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvNgayHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày học: 11/12/2024"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvGioHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ học: 14h"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvGiangVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảng viên: Cô Thu"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvMonHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn: Lập trình C"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Đã đi học"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconsua"
            android:contentDescription="Chỉnh sửa"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
