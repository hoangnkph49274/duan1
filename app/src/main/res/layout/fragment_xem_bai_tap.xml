<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BaiTap.XemBaiTapFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTieuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lập trình C"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Môn -->
    <TextView
        android:id="@+id/tvMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Môn: Lập trình C"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái:  "
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginBottom="30px"
        android:layout_marginTop="30px"/>
    <Spinner
        android:id="@+id/spinnerTrangThai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#000000"
        app:boxBackgroundColor="#FFFFFF"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusBottomEnd="16dp"/>
    <TextView
        android:id="@+id/tvNoiDungChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung ghi chú: \nSinh viên tạo dự án ExpressJS với WebStorm với các chức năng sau : \n1. Tạo màn hình trang chủ hiển thị Menu gồm : Home - Category - News - About\n2. Mỗi trang hiển thị 1 giao diện khác nhau\nHome : Hiển thị Form Login : nhập username và password\nCategory : Hiển thị danh sách chuyên mục bất kỳ\nNews : Hiển thị danh sách Tin tức tương tự như các trang báo, khi bấm vào chi tiết thì hiển thị trang Chi Tiết\nAbout : Giới thiệu về thông tin sinh viên\nHoàn thành bài tập, Sinh viên chụp ảnh lại kết quả các trang đã làm được"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="20dp"/>

</LinearLayout>