<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaiLieu.XemTaiLieuFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTieuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lập trình C"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Loại tài liệu -->
    <TextView
        android:id="@+id/tvLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bài giảng"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#444444"
        android:layout_marginBottom="8dp" />

    <!-- Môn -->
    <TextView
        android:id="@+id/tvMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Môn: Lập trình C"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Đường dẫn -->
    <TextView
        android:id="@+id/tvDuongDan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đường dẫn: https://200lab.io/blog/lap-trinh-c-co-ban/?srsltid=AfmBOopZUxFI4VZqfVz4-xVoKTsUZuyOVV-xJtY4fpl1bGVk0yLkN52G"
        android:textSize="18sp"
        android:textColor="#1E88E5"
        android:autoLink="web"
        android:layout_marginBottom="8dp" />

</LinearLayout>