<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:backgroundTint="#9BE6EF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMaDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã lịch học: Buoi1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/tvMonDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn: Lập trình C"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/tvDiemGiuaKi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diểm giữa kì"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCuoiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diểm cuối kì: "
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvKhac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm khác"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTongKet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm tổng kết: "
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTrangThaiDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Chưa đạt"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnEditDiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconsua"
            android:contentDescription="Chỉnh sửa"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
