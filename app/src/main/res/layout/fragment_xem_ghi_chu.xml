<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GhiChu.XemGhiChuFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTieuDeGhiChu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ghi chú 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Ngày tạo -->
    <TextView
        android:id="@+id/tvNgayTao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày tạo: 11/12/2024"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginBottom="16dp" />

    <!-- Nội dung -->
    <TextView
        android:id="@+id/tvNoiDungGhiChu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung ghi chú:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvNoiDungChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung ghi chú: \nSinh viên tạo dự án ExpressJS với WebStorm với các chức năng sau : \n1. Tạo màn hình trang chủ hiển thị Menu gồm : Home - Category - News - About\n2. Mỗi trang hiển thị 1 giao diện khác nhau\nHome : Hiển thị Form Login : nhập username và password\nCategory : Hiển thị danh sách chuyên mục bất kỳ\nNews : Hiển thị danh sách Tin tức tương tự như các trang báo, khi bấm vào chi tiết thì hiển thị trang Chi Tiết\nAbout : Giới thiệu về thông tin sinh viên\nHoàn thành bài tập, Sinh viên chụp ảnh lại kết quả các trang đã làm được"
        android:textSize="14sp"
        android:textColor="#333333" />

</LinearLayout>